<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Sign Up</h1> 
    <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.email_field :first_name, autofocus: true, class: "form-control", placeholder: "First name" %>
      <%= f.email_field :last_name, autofocus: true, class: "form-control", placeholder: "Last name" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation" %>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
  <% end %>

  <%= render "devise/shared/links" %>
</section>